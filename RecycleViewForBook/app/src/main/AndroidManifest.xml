<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ubi.recycleviewforbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ztai"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.ubi.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ubi.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ubi.activity.PersonActivity"
            android:parentActivityName="com.example.ubi.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar_StatusBar" >
        </activity>

        <service
            android:name="com.example.ubi.service.MyService"
            android:enabled="true"
            android:exported="true">
        </service>

    </application>

</manifest>